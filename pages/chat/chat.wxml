<!-- pages/chat/chat.wxml -->
<view class="container">
  <!-- 顶部标题栏 -->
  <view class="header">
    <text class="title">AI问</text>
    <button class="clear-btn" bindtap="clearHistory">清空</button>
  </view>

  <!-- 对话区域 -->
  <scroll-view class="chat-list" scroll-y scroll-top="{{scrollTop}}">
    <block wx:for="{{messages}}" wx:key="index">
      <view class="message {{item.role === 'user' ? 'user-message' : 'ai-message'}}">
        <text>{{item.content}}</text>
      </view>
    </block>
    <!-- Loading 动画 -->
    <view wx:if="{{loading}}" class="loading">
      <text>正在思考中...</text>
    </view>
  </scroll-view>

  <!-- 底部输入框 -->
  <view class="input-area">
    <input
      class="input-box"
      placeholder="请输入你的需求..."
      value="{{inputValue}}"
      bindinput="onInput"
      confirm-type="send"
      bindconfirm="sendMessage"
    />
    <button class="send-btn" bindtap="sendMessage">发送</button>
  </view>
</view>