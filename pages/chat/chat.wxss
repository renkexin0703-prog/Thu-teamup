/* pages/chat/chat.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #6777ef;
  color: white;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.clear-btn {
  font-size: 28rpx;
  color: white;
  background: transparent;
  border: none;
}

.chat-list {
  flex: 1;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.message {
  max-width: 80%;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  word-wrap: break-word;
}

.user-message {
  background-color: #6777ef;
  color: white;
  margin-left: auto;
}

.ai-message {
  background-color: white;
  color: #333;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.loading {
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.input-area {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: white;
  border-top: 1rpx solid #eee;
}

.input-box {
  flex: 1;
  padding: 20rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.send-btn {
  background-color: #6777ef;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
}