<view class="contact-modal {{ show ? 'show' : '' }}">
  <view class="modal-mask" bindtap="onMaskClick"></view>
  <view class="modal-content">
    <view class="modal-header">
      <text class="title">联系TA</text>
      <button class="close-btn" bindtap="onClose">×</button>
    </view>
    <view class="modal-body">
      <view class="contact-item">
        <text class="label">姓名：</text>
        <text class="value">{{ contactInfo.name }}</text>
      </view>
      <view class="contact-item">
        <text class="label">手机号：</text>
        <text class="value">{{ contactInfo.phone }}</text>
        <button class="copy-btn" bindtap="copyPhone">复制</button>
      </view>
      <view class="contact-item">
        <text class="label">微信：</text>
        <text class="value">{{ contactInfo.wechat || '未填写' }}</text>
        <button class="copy-btn" bindtap="copyWechat" wx:if="{{ contactInfo.wechat }}">复制</button>
      </view>
    </view>
    <view class="modal-footer">
      <button class="call-btn" bindtap="callPhone" wx:if="{{ contactInfo.phone }}">拨打电话</button>
      <button class="confirm-btn" bindtap="onClose">关闭</button>
    </view>
  </view>
</view>