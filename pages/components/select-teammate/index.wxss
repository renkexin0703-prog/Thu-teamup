.select-teammate-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: none;
}
.select-teammate-modal.show {
  display: block;
}
.modal-mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 500rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}
.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.close-btn {
  font-size: 36rpx;
  background: transparent;
  border: none;
  padding: 0;
  line-height: 1;
}
.teammate-list {
  width: 100%;
}
.teammate-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.teammate-item.selected {
  background: #f0f8ff;
}
.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.selected-icon {
  color: #1989fa;
}
.modal-footer {
  display: flex;
  gap: 10rpx;
  margin-top: 20rpx;
}
.cancel-btn, .confirm-btn {
  flex: 1;
  padding: 15rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.cancel-btn {
  background: #f5f5f5;
  color: #333;
}
.confirm-btn {
  background: #1989fa;
  color: #fff;
}