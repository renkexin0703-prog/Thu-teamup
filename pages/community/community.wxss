/* 背景图容器 */
.card-container {
  position: relative;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 15px;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

/* 背景图 */
.post-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1;
  object-fit: cover; /* 填充并裁剪 */
}

/* 内容层 */
.card-content {
  position: relative;
  z-index: 2;
  padding: 15px;
  color: #333;
}

.teamup-list {
  padding-bottom: 20px;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 14px;
  font-weight: bold;
}

.user-dept {
  font-size: 12px;
  color: #666;
}

.gender-tag {
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 10px;
  background-color: #f0f0f0;
  color: #666;
}

.post-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 8px;
}

.post-content {
  font-size: 14px;
  color: #666;
  margin-bottom: 10px;
  line-height: 1.5;
}

.post-skills {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  margin-bottom: 10px;
}

.skill-tag {
  font-size: 12px;
  padding: 3px 8px;
  border-radius: 15px;
  background-color: #e8f4ff;
  color: #6777ef;
}

.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
}

.view-count {
  font-size: 12px;
  color: #999;
}
/* 为重置按钮添加样式 */
.reset-btn {
  font-size: 14px;
  color: #6777ef;
  padding: 5px 10px;
  border: 1px solid #6777ef;
  border-radius: 5px;
  margin-left: 10px;
}