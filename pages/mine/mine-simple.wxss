/* 简化版样式文件 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.bg-white {
  background-color: white;
}

.rounded-lg {
  border-radius: 16rpx;
}

.p-20 {
  padding: 20rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.justify-between {
  justify-content: space-between;
}

.mr-20 {
  margin-right: 20rpx;
}

.font-bold {
  font-weight: bold;
}

.text-36rpx {
  font-size: 36rpx;
}

.text-32rpx {
  font-size: 32rpx;
}

.text-light {
  color: #999;
}

.text-primary {
  color: #646cff;
}

.block {
  display: block;
}

.mt-20 {
  margin-top: 20rpx;
}

.w-100 {
  width: 100%;
}

.purple-btn {
  background-color: #646cff;
  color: white;
  border-radius: 8rpx;
}

.purple-btn::after {
  border: none;
}

/* 头像上传区域样式 */
.avatar-upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  margin: 20rpx 0;
}

.avatar-preview {
  position: relative;
  margin-bottom: 20rpx;
}

.avatar-preview van-image {
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.upload-btn {
  background-color: #646cff;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
}

.upload-btn::after {
  border: none;
}

.upload-btn:active {
  opacity: 0.8;
}