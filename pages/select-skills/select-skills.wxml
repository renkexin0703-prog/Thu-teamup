<!-- pages/select-skills/select-skills.wxml -->
<view class="container">
  <view class="header">选择技能</view>

  <!-- 输入框 -->
  <view class="input-group">
    <input 
      class="input" 
      placeholder="请输入技能名称" 
      value="{{inputSkill}}" 
      bindinput="onInputChange"
    />
    <button class="add-btn" bindtap="onAddSkill">添加</button>
  </view>

  <!-- 已选技能列表 -->
  <view class="selected-list">
    <block wx:for="{{selectedSkills}}" wx:key="index">
      <view class="skill-item">
        {{item}}
        <text class="remove-btn" bindtap="onRemoveSkill" data-index="{{index}}">×</text>
      </view>
    </block>
  </view>

  <!-- 空状态提示 -->
  <view wx:if="{{selectedSkills.length === 0}}" class="empty-tip">
    暂无已选技能
  </view>

  <!-- 底部按钮 -->
  <view class="btn-group">
    <button class="cancel-btn" bindtap="onCancel">取消</button>
    <button class="confirm-btn" bindtap="onConfirm">确定</button>
  </view>
</view>