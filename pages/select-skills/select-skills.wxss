/* pages/select-skills/select-skills.wxss */

.container {
  padding: 20rpx;
  background-color: #f9f9f9;
  min-height: 100vh;
}

.header {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
  color: #333;
}

.input-group {
  display: flex;
  margin-bottom: 30rpx;
}

.input {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.add-btn {
  margin-left: 20rpx;
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #5cb85c;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.selected-list {
  margin-bottom: 50rpx;
}

.skill-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.remove-btn {
  color: #ff4d4f;
  font-size: 32rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
  font-size: 28rpx;
}

.btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}

.cancel-btn {
  width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ccc;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
}

.confirm-btn {
  width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #6777ef;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
}