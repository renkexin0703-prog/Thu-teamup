.partner-list {
  margin-top: 10px;
}

.partner-item {
  display: flex;
  gap: 15px;
  padding: 15px 0;
  border-bottom: 1px solid #f0f0f0;
}

.partner-item:last-child {
  border-bottom: none;
}

.partner-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  flex-shrink: 0;
}

.partner-info {
  flex: 1;
}

.partner-name {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 4px;
}

.partner-base {
  font-size: 13px;
  color: #666;
  margin-bottom: 4px;
}

.partner-skills {
  font-size: 12px;
  color: #666;
  margin-bottom: 4px;
}

.partner-tags {
  font-size: 12px;
  margin-bottom: 4px;
}

.tag {
  padding: 2px 6px;
  background-color: #e8f4ff;
  color: #6777ef;
  border-radius: 4px;
  margin-right: 4px;
}

.partner-post {
  font-size: 12px;
  color: #6777ef;
}

.small-btn {
  padding: 6px 10px;
  margin: 0;
  font-size: 12px;
  height: fit-content;
}