.container {
  padding: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input, .picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.picker {
  background-color: #f9f9f9;
  color: #666;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #007aff;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin-top: 50rpx;
}