/* 新增头像样式 */
.avatar-item {
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 80rpx;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}

.upload-btn {
  position: absolute;
  /* 关键修改：从右下角移到正下方 */
  bottom: -70rpx;  /* 负值，让按钮在头像下方 */
  left: 50%;       /* 水平居中 */
  transform: translateX(-50%); /* 精确居中 */
  width: 120rpx;   /* 按钮宽度，可根据需要调整 */
  height: 60rpx;  /* 按钮高度，可根据需要调整 */
  background-color: rgba(103, 119, 239, 0.8);
  color: white;
  border-radius: 30rpx; /* 圆角，让按钮更像一个长条 */
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: center;
  z-index: 10;
}

#cut-canvas {
  display: none;
}

.container {
  padding: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input, .picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.picker {
  background-color: #f9f9f9;
  color: #666;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  max-height: 200rpx;
  line-height: 40rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f9f9f9;
  color: #666;
  resize: none;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 50rpx;
  background-color: #6777ef;
  color: white;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin-top: 50rpx;
}