.gift-list {
  margin-top: 10px;
}

.gift-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px 0;
  border-bottom: 1px solid #f0f0f0;
}

.gift-item:last-child {
  border-bottom: none;
}

.gift-name {
  font-size: 15px;
  font-weight: bold;
  margin-bottom: 4px;
}

.gift-points {
  font-size: 13px;
  color: #ff9500;
  margin-bottom: 2px;
}

.gift-stock {
  font-size: 12px;
  color: #666;
}

.out-of-stock {
  color: #d9534f;
}

.btn.disabled {
  background: #999 !important;
  pointer-events: none;
}