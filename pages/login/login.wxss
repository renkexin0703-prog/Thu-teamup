/* pages/login/login.wxss */
/* 背景图样式：铺满全屏，放在最底层 */
.bg-img {
  position: fixed;
  width: 100vw;  /* 全屏宽度 */
  height: 100vh; /* 全屏高度 */
  top: 0;
  left: 0;
  z-index: -1;  /* 确保在内容下方 */
}

/* 登录容器：只保留布局样式，删掉背景图 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 50vh;
  padding: 40rpx;
  position: relative;
  z-index: 1; /* 确保内容在背景图上方 */
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
}

.login-btn {
  width: 80%;
  background-color: #07c160;
  border-radius: 50rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}