.user-card {
  padding: 20px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.user-name {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.user-base-info {
  font-size: 14px;
  color: #666;
  margin-bottom: 10px;
}

.user-skills {
  font-size: 14px;
  color: #6777ef;
}