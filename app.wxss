/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-size: 14px;
  color: #333;
}

/* 通用按钮 */
.btn {
  background: linear-gradient(90deg, #6777ef, #8a94f0);
  color: white;
  border-radius: 8px;
  text-align: center;
  padding: 10px;
  margin: 10px 0;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 12px;
  padding: 15px;
  margin: 10px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

/* 筛选栏样式 */
.filter-bar {
  background-color: white;
  padding: 10px;
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.filter-tag {
  padding: 5px 10px;
  border: 1px solid #6777ef;
  border-radius: 20px;
  color: #6777ef;
  font-size: 12px;
}

.filter-tag.active {
  background-color: #6777ef;
  color: white;
}